skip_list:
  # Keep some rules relaxed for now, tighten incrementally
  - yaml[line-length]
  - fqcn[action-core]
  - command-instead-of-module
  - no-changed-when
  - risky-shell-pipe
  - var-naming[no-role-prefix]
  - name[casing]
  - schema[meta]
  - meta-no-tags
  - key-order[task]
  - risky-file-permissions
  - role-name
  - schema[tasks]
  - parser-error

offline: false
exclude_paths:
  - .github/
  - backups/
  - .ansible/

# Enable more strict checking for production
warn_list:
  - experimental
  - args[module]
  - literal-compare
  - jinja[spacing]

# Rules to enforce for production quality
enable_list:
  - yaml[comments-indentation]
  - yaml[empty-lines]
  - name[template]
  - no-free-form

# File type detection configuration
kinds:
  - playbook: "**/playbooks/*.yml"
  - tasks: "**/tasks/*.yml"
  - vars: "**/vars/*.yml"
  - meta: "**/meta/*.yml"
  - yaml: "**/*.yaml"
