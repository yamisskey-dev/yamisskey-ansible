# TrueNAS Scale Custom App - MinIO + Cloudflared (統合版)
# Generated by Ansible TrueNAS Apps Role
# アーキテクチャ: [Cloudflare Tunnel] → cloudflared → MinIO (直結)

version: '3.8'

networks:
  appnet:
    driver: bridge
    name: {{ truenas_minio_app_name }}_network

services:
  minio:
    image: quay.io/minio/minio:{{ truenas_minio_version | default('RELEASE.2025-01-01T00-00-00Z') }}
    container_name: minio
    restart: unless-stopped
    
    # Resource limits for TrueNAS Scale
    deploy:
      resources:
        limits:
          memory: {{ truenas_minio_memory_limit | default('2G') }}
          cpus: '{{ truenas_minio_cpu_limit | default('1.0') }}'
        reservations:
          memory: {{ truenas_minio_memory_reservation | default('512M') }}
    
    # Environment Variables (Cloudflare Tunnel対応)
    environment:
      - MINIO_ROOT_USER=${MINIO_ROOT_USER}
      - MINIO_ROOT_PASSWORD=${MINIO_ROOT_PASSWORD}
      - MINIO_API_CORS_ALLOW_ORIGIN=*
      - MINIO_BROWSER=off
      - MINIO_REGION={{ truenas_minio_region | default('ap-northeast-3') }}
      # Cloudflare Tunnel経由の公開ホスト名
      - MINIO_DOMAIN={{ truenas_minio_domain | default('drive.yami.ski') }}
      - MINIO_SERVER_URL=https://{{ truenas_minio_domain | default('drive.yami.ski') }}
      - MINIO_COMPRESS=on
      - MINIO_KMS_SECRET_KEY=${MINIO_KMS_SECRET_KEY}
      - MINIO_KMS_AUTO_ENCRYPTION=on
    
    # ポート公開なし（cloudflared経由のみ）
    # ports: []  # セキュリティ: 直接アクセス完全遮断
    
    # Storage (Host Path - ZFS Dataset)
    volumes:
      - {{ truenas_minio_data_path }}:/data:rw
    
    # Health Check (curlなしMinIO向け軽量版)
    healthcheck:
      test: ["CMD", "mc", "ready", "local"]
      interval: 30s
      timeout: 20s
      retries: 3
      start_period: 60s
    
    # MinIO Server Command
    command: server /data --console-address ":9001"
    
    # Network Configuration
    networks:
      - appnet

  cloudflared:
    image: cloudflare/cloudflared:{{ truenas_cloudflared_version | default('latest') }}
    container_name: cloudflared
    restart: unless-stopped
    
    # Cloudflared Command
    command: tunnel run
    
    # Environment Variables
    environment:
      - TUNNEL_TOKEN=${TUNNEL_TOKEN}
    
    # Configuration (ZFS Dataset保管)
    volumes:
      - {{ truenas_cloudflared_config_path }}:/etc/cloudflared:ro
    
    # Network Configuration (MinIO直結)
    networks:
      - appnet
    
    # Resource limits
    deploy:
      resources:
        limits:
          memory: 128M
          cpus: '0.1'

{% if truenas_nginx_enabled | default(false) %}
  # オプション: nginx + ModSecurity (後付け可能)
  nginx:
    image: {{ truenas_nginx_image | default('owasp/modsecurity-nginx:latest') }}
    container_name: nginx-modsec
    restart: unless-stopped
    
    # Environment Variables
    environment:
      - SSL=off
      - NGINX_ALWAYS_TLS_REDIRECT=off
    
    # Configuration
    volumes:
      - {{ truenas_nginx_config_path }}:/etc/nginx/conf.d:ro
      - {{ truenas_nginx_rules_path }}:/etc/modsecurity.d/custom:ro
    
    # Network Configuration
    networks:
      - appnet
    
    # Resource limits
    deploy:
      resources:
        limits:
          memory: 512M
          cpus: '0.5'
{% endif %}