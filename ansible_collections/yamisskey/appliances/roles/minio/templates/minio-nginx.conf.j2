# MinIO Nginx Server Configuration for TrueNAS SCALE
# URL direct access prevention with S3 API compatibility

# Upstream to MinIO container
upstream minio_backend {
    server minio:9000 weight=1 max_fails=3 fail_timeout=10s;
    keepalive 32;
    keepalive_requests 100;
    keepalive_timeout 60s;
}

# Main server block
server {
    listen 9000;
    server_name _;
    
    # Basic performance settings
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 75;
    reset_timedout_connection on;
    
    # Rate limiting with burst
    limit_req zone=minio_general burst=100 nodelay;
    limit_req zone=minio_burst burst=200 nodelay;
    
    # Error handling
    error_page 502 503 504 /50x.html;
    location = /50x.html {
        return 502 "MinIO service temporarily unavailable";
    }
    
    # Basic security headers
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "DENY" always;
    add_header X-Robots-Tag "noindex, nofollow" always;
    
    # Proxy headers
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
    
    # S3 API specific headers
    proxy_set_header Authorization $http_authorization;
    proxy_set_header X-Amz-Content-Sha256 $http_x_amz_content_sha256;
    proxy_set_header X-Amz-Date $http_x_amz_date;
    proxy_set_header X-Amz-Security-Token $http_x_amz_security_token;
    proxy_set_header Content-Type $content_type;
    
    # Health check endpoint (bypass restrictions)
    location /health {
        return 200 "OK";
        add_header Content-Type text/plain;
    }
    
    # Root path access control - Block direct browser access
    location = / {
        return 403 "MinIO S3 API - Direct access not allowed";
    }
    
    # Fast path for images with access control
    location ~* \.(webp|jpg|jpeg|png|gif|ico|svg)$ {
        # Access control variables
        set $allowed_client 0;
        set $browser_access 0;
        set $allow_federation 0;
        
        # Allow AWS SDK and S3 clients
        if ($http_user_agent ~* "(aws-sdk|boto|s3cmd|rclone|minio-go|aws-cli)") {
            set $allowed_client 1;
        }
        
        # Allow ActivityPub federation platforms
        if ($http_user_agent ~* "(misskey|mastodon|pleroma|firefish|calckey|foundkey|akkoma|sharkey|iceshrimp|gotosocial|pixelfed|outline|axios|curl|wget|python-requests|go-fed)") {
            set $allowed_client 1;
        }
        
        # Allow Cloudflare traffic
        if ($http_cf_ray != "") {
            set $allowed_client 1;
        }
        
        # Detect direct browser access
        if ($http_accept ~* "text/html") {
            set $browser_access 1;
        }
        
        # Allow federation platforms by referer
        if ($http_referer ~* "(misskey|mastodon|pleroma|firefish|calckey|foundkey|akkoma|sharkey|iceshrimp|gotosocial|pixelfed)") {
            set $allow_federation 1;
        }
        
        # Block browsers unless they're from federation platforms
        set $block_browser "${browser_access}${allow_federation}";
        if ($block_browser = "10") {
            return 403 "Direct browser access not allowed";
        }
        
        # Block non-allowed clients
        if ($allowed_client = 0) {
            return 403 "Client not allowed";
        }
        
        # Proxy to MinIO
        proxy_pass http://minio_backend;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_set_header Host $http_host;
        
        # Fast timeouts for images
        proxy_connect_timeout 3s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;
        
        # Buffering settings
        proxy_buffering on;
        proxy_buffer_size 256k;
        proxy_buffers 8 512k;
        proxy_busy_buffers_size 1m;
        proxy_request_buffering off;
    }
    
    # Main MinIO API with access control
    location / {
        # Access control variables
        set $allowed_client 0;
        set $browser_access 0;
        set $allow_federation 0;
        
        # Allow AWS SDK and S3 clients
        if ($http_user_agent ~* "(aws-sdk|boto|s3cmd|rclone|minio-go|aws-cli)") {
            set $allowed_client 1;
        }
        
        # Allow ActivityPub federation platforms
        if ($http_user_agent ~* "(misskey|mastodon|pleroma|firefish|calckey|foundkey|akkoma|sharkey|iceshrimp|gotosocial|pixelfed|outline|axios|curl|wget|python-requests|go-fed)") {
            set $allowed_client 1;
        }
        
        # Allow Cloudflare traffic
        if ($http_cf_ray != "") {
            set $allowed_client 1;
        }
        
        # Detect direct browser access
        if ($http_accept ~* "text/html") {
            set $browser_access 1;
        }
        
        # Allow federation platforms by referer
        if ($http_referer ~* "(misskey|mastodon|pleroma|firefish|calckey|foundkey|akkoma|sharkey|iceshrimp|gotosocial|pixelfed)") {
            set $allow_federation 1;
        }
        
        # Block browsers unless they're from federation platforms
        set $block_browser "${browser_access}${allow_federation}";
        if ($block_browser = "10") {
            return 403 "Direct browser access not allowed";
        }
        
        # Block non-allowed clients
        if ($allowed_client = 0) {
            return 403 "Client not allowed";
        }
        
        # Proxy to MinIO backend
        proxy_pass http://minio_backend;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_set_header Host $http_host;
        
        # Timeouts
        proxy_connect_timeout 3s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Buffering for large uploads
        proxy_buffering on;
        proxy_buffer_size 256k;
        proxy_buffers 8 512k;
        proxy_busy_buffers_size 1m;
        proxy_temp_file_write_size 1m;
        proxy_max_temp_file_size 2048m;
        proxy_request_buffering off;
        
        # Pass through error responses
        proxy_intercept_errors off;
    }
    
    # Compression for API responses
    gzip on;
    gzip_types
        application/json
        application/xml
        text/xml
        text/plain
        application/octet-stream;
    gzip_proxied any;
    gzip_vary on;
    gzip_min_length 128;
    gzip_comp_level 6;
    
    # Performance tuning
    sendfile on;
    sendfile_max_chunk 2m;
    client_header_buffer_size 4k;
    large_client_header_buffers 4 16k;
}