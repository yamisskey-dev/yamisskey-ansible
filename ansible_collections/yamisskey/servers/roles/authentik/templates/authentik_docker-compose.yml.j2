---
# Authentik 2025.10+ - Redis is no longer required
# https://goauthentik.io/blog/2025-11-13-we-removed-redis/
services:
  postgresql:
    image: docker.io/library/postgres:{{ authentik_postgresql_version | default('16-alpine') }}
    restart: unless-stopped
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -d {{ postgresql_database }} -U {{ postgresql_user }}"]
      start_period: 20s
      interval: 30s
      retries: 5
      timeout: 5s
    volumes:
      - "{{ authentik_dir }}/postgres-data:/var/lib/postgresql/data"
    environment:
      POSTGRES_PASSWORD: "{{ postgresql_password }}"
      POSTGRES_USER: "{{ postgresql_user }}"
      POSTGRES_DB: "{{ postgresql_database }}"
    networks:
      - authentik

  server:
    image: ghcr.io/goauthentik/server:{{ authentik_version | default('2025.10') }}
    restart: unless-stopped
    command: server
    environment:
      AUTHENTIK_SECRET_KEY: "{{ authentik_secret_key }}"
      AUTHENTIK_POSTGRESQL__HOST: postgresql
      AUTHENTIK_POSTGRESQL__USER: "{{ postgresql_user }}"
      AUTHENTIK_POSTGRESQL__NAME: "{{ postgresql_database }}"
      AUTHENTIK_POSTGRESQL__PASSWORD: "{{ postgresql_password }}"
    volumes:
      - "{{ authentik_dir }}/media:/media"
      - "{{ authentik_dir }}/custom-templates:/templates"
    ports:
      - "{{ authentik_port | default(9003) }}:9000"
      - "{{ authentik_port_https | default(9443) }}:9443"
    depends_on:
      postgresql:
        condition: service_healthy
    networks:
      - authentik

  worker:
    image: ghcr.io/goauthentik/server:{{ authentik_version | default('2025.10') }}
    restart: unless-stopped
    command: worker
    environment:
      AUTHENTIK_SECRET_KEY: "{{ authentik_secret_key }}"
      AUTHENTIK_POSTGRESQL__HOST: postgresql
      AUTHENTIK_POSTGRESQL__USER: "{{ postgresql_user }}"
      AUTHENTIK_POSTGRESQL__NAME: "{{ postgresql_database }}"
      AUTHENTIK_POSTGRESQL__PASSWORD: "{{ postgresql_password }}"
    user: root
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - "{{ authentik_dir }}/media:/media"
      - "{{ authentik_dir }}/certs:/certs"
      - "{{ authentik_dir }}/custom-templates:/templates"
    depends_on:
      postgresql:
        condition: service_healthy
    networks:
      - authentik

networks:
  authentik:
    name: authentik_network
