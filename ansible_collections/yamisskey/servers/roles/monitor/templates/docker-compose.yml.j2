version: '3.8'

networks:
  monitor:
    driver: bridge
    ipam:
      config:
        - subnet: 172.20.0.0/16

volumes:
  prometheus_data:
  grafana_data:
  alertmanager_data:

services:
  prometheus:
    image: prom/prometheus:{{ monitor_prometheus_version | default('latest') }}
    container_name: prometheus
    ports:
      - "{{ monitor_services.prometheus }}:9090"
    volumes:
      - prometheus_data:/prometheus
      - {{ monitor_compose_dir }}/config/prometheus:/etc/prometheus:ro
      - {{ monitor_compose_dir }}/config/rules:/etc/prometheus/rules:ro
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'
      - '--storage.tsdb.path=/prometheus'
      - '--storage.tsdb.retention.time={{ prometheus_retention | default("200h") }}'
      - '--web.console.libraries=/etc/prometheus/console_libraries'
      - '--web.console.templates=/etc/prometheus/consoles'
      - '--web.enable-lifecycle'
      - '--web.external-url=https://prometheus.{{ primary_domain }}'
      - '--web.route-prefix=/'
    networks:
      - monitor
    restart: unless-stopped
    user: "65534:65534"
    depends_on:
      - alertmanager

  grafana:
    image: grafana/grafana:{{ monitor_grafana_version | default('latest') }}
    container_name: grafana
    ports:
      - "{{ monitor_services.grafana }}:3000"
    volumes:
      - grafana_data:/var/lib/grafana
    environment:
      - GF_SECURITY_ADMIN_PASSWORD={{ grafana_admin_password }}
      - GF_USERS_ALLOW_SIGN_UP=false
      - GF_SERVER_ROOT_URL=https://grafana.{{ primary_domain }}
      - GF_SERVER_SERVE_FROM_SUB_PATH=true
      - GF_SECURITY_COOKIE_SECURE=true
      - GF_SECURITY_STRICT_TRANSPORT_SECURITY=true
      - GF_ANALYTICS_REPORTING_ENABLED=false
      - GF_ANALYTICS_CHECK_FOR_UPDATES=false
      - GF_LOG_LEVEL={{ grafana_log_level | default('info') }}
    networks:
      - monitor
    restart: unless-stopped
    user: "472:472"
    depends_on:
      - prometheus

  alertmanager:
    image: prom/alertmanager:{{ monitor_alertmanager_version | default('latest') }}
    container_name: alertmanager
    ports:
      - "{{ monitor_services.alertmanager | default('9093') }}:9093"
    volumes:
      - alertmanager_data:/alertmanager
      - {{ monitor_compose_dir }}/config/alertmanager:/etc/alertmanager:ro
    command:
      - '--config.file=/etc/alertmanager/alertmanager.yml'
      - '--storage.path=/alertmanager'
      - '--web.external-url=https://alert.{{ primary_domain }}'
      - '--web.route-prefix=/'
      - '--cluster.listen-address='
    networks:
      - monitor
    restart: unless-stopped
    user: "65534:65534"