version: '3.8'

networks:
  monitor:
    driver: bridge
    ipam:
      config:
        - subnet: 172.20.0.0/16

volumes:
  prometheus_data:
  grafana_data:
  alertmanager_data:

services:
  prometheus:
    image: prom/prometheus:{{ monitor_prometheus_version | default('latest') }}
    container_name: prometheus
    ports:
      - "{{ monitor_services.prometheus }}:9090"
    volumes:
      - prometheus_data:/prometheus
      - {{ monitor_compose_dir }}/config/prometheus:/etc/prometheus
      - {{ monitor_compose_dir }}/config/rules:/etc/prometheus/rules
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'
      - '--storage.tsdb.path=/prometheus'
      - '--storage.tsdb.retention.time={{ prometheus_retention | default("200h") }}'
      - '--web.console.libraries=/etc/prometheus/console_libraries'
      - '--web.console.templates=/etc/prometheus/consoles'
      - '--web.enable-lifecycle'
      - '--web.external-url=http://localhost:{{ monitor_services.prometheus }}'
      - '--web.route-prefix=/'
    networks:
      - monitor
    restart: unless-stopped
    user: "65534:65534"

  grafana:
    image: grafana/grafana:{{ monitor_grafana_version | default('latest') }}
    container_name: grafana
    ports:
      - "{{ monitor_services.grafana }}:3000"
    volumes:
      - grafana_data:/var/lib/grafana
      - {{ monitor_compose_dir }}/config/grafana/provisioning:/etc/grafana/provisioning
      - {{ monitor_compose_dir }}/config/grafana/dashboards:/etc/grafana/dashboards
    environment:
      - GF_SECURITY_ADMIN_PASSWORD={{ grafana_admin_password }}
      - GF_USERS_ALLOW_SIGN_UP=false
      - GF_SERVER_ROOT_URL=http://localhost:{{ monitor_services.grafana }}
      - GF_SERVER_SERVE_FROM_SUB_PATH=false
      - GF_SECURITY_COOKIE_SECURE=false
      - GF_SECURITY_STRICT_TRANSPORT_SECURITY=false
      - GF_ANALYTICS_REPORTING_ENABLED=false
      - GF_ANALYTICS_CHECK_FOR_UPDATES=false
      - GF_LOG_LEVEL={{ grafana_log_level | default('info') }}
    networks:
      - monitor
    restart: unless-stopped
    user: "472:472"

  alertmanager:
    image: prom/alertmanager:{{ monitor_alertmanager_version | default('latest') }}
    container_name: alertmanager
    ports:
      - "{{ monitor_services.alertmanager | default('9093') }}:9093"
    volumes:
      - alertmanager_data:/alertmanager
      - {{ monitor_compose_dir }}/config/alertmanager:/etc/alertmanager
    command:
      - '--config.file=/etc/alertmanager/alertmanager.yml'
      - '--storage.path=/alertmanager'
      - '--web.external-url=http://localhost:{{ monitor_services.alertmanager | default("9093") }}'
      - '--web.route-prefix=/'
      - '--cluster.listen-address='
    networks:
      - monitor
    restart: unless-stopped
    user: "65534:65534"

{% if primary_domain != 'test.local' and primary_domain != 'localhost.localdomain' %}
  blackbox:
    image: prom/blackbox-exporter:{{ monitor_blackbox_version | default('latest') }}
    container_name: blackbox
    ports:
      - "{{ monitor_services.blackbox | default('9115') }}:9115"
    volumes:
      - {{ monitor_compose_dir }}/config/blackbox:/etc/blackbox_exporter
    networks:
      - monitor
    restart: unless-stopped
    user: "65534:65534"
{% endif %}