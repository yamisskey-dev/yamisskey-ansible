---
# Nostream - Nostr relay (yamisskey-dev/nostream)
services:
  nostream:
    image: ghcr.io/yamisskey-dev/nostream:latest
    restart: unless-stopped
    environment:
      SECRET: "{{ nostream_secret }}"
      RELAY_PORT: "8008"
      NOSTR_CONFIG_DIR: "/home/node/.nostr"
      DB_HOST: "nostream_postgres"
      DB_PORT: "5432"
      DB_NAME: "{{ nostream_postgres_db }}"
      DB_USER: "{{ nostream_postgres_user }}"
      DB_PASSWORD: "{{ nostream_postgres_password }}"
      REDIS_HOST: "nostream_redis"
      REDIS_PORT: "6379"
    volumes:
      - "{{ nostream_dir }}/.nostr:/home/node/.nostr"
    ports:
      - "{{ nostream_port }}:8008"
    depends_on:
      nostream_postgres:
        condition: service_healthy
      nostream_redis:
        condition: service_healthy
    networks:
      - nostream

  nostream_postgres:
    image: postgres:15-alpine
    restart: unless-stopped
    environment:
      POSTGRES_USER: "{{ nostream_postgres_user }}"
      POSTGRES_PASSWORD: "{{ nostream_postgres_password }}"
      POSTGRES_DB: "{{ nostream_postgres_db }}"
    volumes:
      - "{{ nostream_dir }}/postgres-data:/var/lib/postgresql/data"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U {{ nostream_postgres_user }} -d {{ nostream_postgres_db }}"]
      interval: 5s
      timeout: 5s
      retries: 20
    networks:
      - nostream

  nostream_redis:
    image: redis:7-alpine
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 5s
      timeout: 5s
      retries: 20
    networks:
      - nostream

networks:
  nostream:
    name: nostream_network
