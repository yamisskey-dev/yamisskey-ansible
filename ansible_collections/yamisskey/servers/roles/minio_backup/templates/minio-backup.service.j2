[Unit]
Description=MinIO Backup to TrueNAS
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
User={{ ansible_user }}
Group={{ ansible_user }}
ExecStart={{ minio_backup_dir }}/minio-backup.sh
StandardOutput=journal
StandardError=journal

# Resource limits
Nice=19
IOSchedulingClass=idle
