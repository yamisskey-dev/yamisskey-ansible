# ModSecurity-Nginx configuration for Neo-Quesdon
# This file is included in the main ModSecurity-Nginx container

# Upstream definition
upstream neo_quesdon_backend {
    server localhost:{{ host_services.balthasar.neo_quesdon }};
    keepalive 8;
}

# Server block for Neo-Quesdon
server {
    listen {{ modsecurity_nginx_port | default(8080) }};
    http2 on;
    server_name {{ neo_quesdon_server_name }};

    # Error page handling - redirect to maintenance page when backend is down
    error_page 502 503 504 @maintenance_redirect;

    # Maintenance page redirect location
    location @maintenance_redirect {
        return 302 https://down.yami.ski;
    }

    # Security headers (included from shared config to ensure inheritance in all locations)
    include /etc/nginx/conf.d/00-security-headers-sameorigin.conf;

    # CORS headers for API access
    add_header 'Access-Control-Allow-Origin' '*' always;
    add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS' always;
    add_header 'Access-Control-Allow-Headers' 'Content-Type, Authorization' always;

    # Proxy settings
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;

    # WebSocket endpoint for real-time communication
    location /api/websocket {
        proxy_pass http://neo_quesdon_backend;
        proxy_http_version 1.1;

        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;

        proxy_buffering off;
        proxy_cache off;
        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
        proxy_connect_timeout 60s;

        proxy_socket_keepalive on;
    }

    # API endpoints
    location /api/ {
        proxy_pass http://neo_quesdon_backend;
        proxy_http_version 1.1;

        # API timeouts
        proxy_connect_timeout 30s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;

        # No caching for dynamic content
        # Security headers (must be included in location blocks that use add_header)
        include /etc/nginx/conf.d/00-security-headers-sameorigin.conf;
        add_header Cache-Control "no-cache, no-store, must-revalidate";
    }

    # Static assets
    location /static/ {
        proxy_pass http://neo_quesdon_backend;
        proxy_http_version 1.1;

        # Cache static assets with proxy cache
        proxy_cache static_cache;
        proxy_cache_valid 200 1d;
        proxy_cache_valid 404 1h;
        proxy_cache_use_stale error timeout updating;

        # Cache static assets
        expires 1d;
        # Security headers (must be included in location blocks that use add_header)
        include /etc/nginx/conf.d/00-security-headers-sameorigin.conf;
        add_header Cache-Control "public, immutable";
        add_header X-Cache-Status $upstream_cache_status;
    }

    # Main Neo-Quesdon application
    location / {
        proxy_pass http://neo_quesdon_backend;
        proxy_http_version 1.1;

        # Standard timeouts
        proxy_connect_timeout 30s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;

        # Buffering
        proxy_buffering on;
        proxy_buffer_size 64k;
        proxy_buffers 4 64k;

        # Light caching for Q&A content
        proxy_cache api_cache;
        proxy_cache_methods GET HEAD;
        proxy_cache_valid 200 5m;
        proxy_cache_valid 404 1m;
        proxy_cache_use_stale error timeout updating;
        proxy_cache_key "$scheme$request_method$host$request_uri";

        # Security headers (must be included in location blocks that use add_header)
        include /etc/nginx/conf.d/00-security-headers-sameorigin.conf;
        add_header X-Cache-Status $upstream_cache_status;
    }

    # Static assets
    location ~* \.(css|js|woff|woff2|ttf|eot|svg|ico|png|jpg|gif)$ {
        proxy_pass http://neo_quesdon_backend;

        proxy_cache static_cache;
        proxy_cache_valid 200 1d;
        proxy_cache_valid 404 1h;
        proxy_cache_use_stale error timeout updating;

        expires 1d;
        # Security headers (must be included in location blocks that use add_header)
        include /etc/nginx/conf.d/00-security-headers-sameorigin.conf;
        add_header Cache-Control "public";
        add_header X-Cache-Status $upstream_cache_status;
    }
}
