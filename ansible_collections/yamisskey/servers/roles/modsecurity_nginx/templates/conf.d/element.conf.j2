# ModSecurity-Nginx configuration for Element Web
# This file is included in the main ModSecurity-Nginx container

# Upstream definition
upstream element_backend {
    server localhost:{{ host_services.balthasar.element }};
    keepalive 8;
}

# Server block for Element Web
server {
    listen {{ modsecurity_nginx_port | default(8080) }};
    http2 on;
    server_name {{ element_server_name }};

    # Error page handling - redirect to maintenance page when backend is down
    error_page 502 503 504 @maintenance_redirect;

    # Maintenance page redirect location
    location @maintenance_redirect {
        return 302 https://down.yami.ski;
    }

    # Security headers (included from shared config to ensure inheritance in all locations)
    include /etc/nginx/conf.d/00-security-headers-sameorigin.conf;

    # CORS headers for Element
    add_header 'Access-Control-Allow-Origin' '*' always;
    add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS' always;
    add_header 'Access-Control-Allow-Headers' 'Authorization, Origin, X-Requested-With, Content-Type, Accept' always;
    add_header 'Access-Control-Allow-Credentials' 'true' always;

    # Proxy settings
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;

    # WebSocket support
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;

    # Element config endpoint - proxied from Element container
    # Config file is mounted at /app/config.chat.yami.ski.json in the Element container
    location = /config.{{ element_server_name }}.json {
        proxy_pass http://element_backend/config.{{ element_server_name }}.json;
        proxy_http_version 1.1;

        # Cache config for performance
        proxy_cache static_cache;
        proxy_cache_valid 200 1h;
        expires 1h;

        # Security headers (must be included in location blocks that use add_header)
        include /etc/nginx/conf.d/00-security-headers-sameorigin.conf;
        add_header Cache-Control "public";
        add_header X-Cache-Status $upstream_cache_status;
    }

    # Main Element application
    location / {
        proxy_pass http://element_backend;
        proxy_http_version 1.1;

        # Timeouts
        proxy_connect_timeout 30s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;

        # Cache for static web content
        proxy_cache static_cache;
        proxy_cache_methods GET HEAD;
        proxy_cache_valid 200 1h;
        proxy_cache_valid 404 5m;
        proxy_cache_use_stale error timeout updating;
        proxy_cache_key "$scheme$request_method$host$request_uri";

        # Security headers (must be included in location blocks that use add_header)
        include /etc/nginx/conf.d/00-security-headers-sameorigin.conf;
        add_header X-Cache-Status $upstream_cache_status;
    }

    # Static assets for Element
    location ~* \.(css|js|woff|woff2|ttf|eot|svg|ico|png|jpg|gif|map)$ {
        proxy_pass http://element_backend;

        proxy_cache static_cache;
        proxy_cache_valid 200 7d;
        proxy_cache_valid 404 1h;
        proxy_cache_use_stale error timeout updating;

        expires 7d;
        # Security headers (must be included in location blocks that use add_header)
        include /etc/nginx/conf.d/00-security-headers-sameorigin.conf;
        add_header Cache-Control "public, immutable";
        add_header X-Cache-Status $upstream_cache_status;
    }

    # Access and error logs
    access_log /var/log/nginx/element_access.log;
    error_log /var/log/nginx/element_error.log;
}
