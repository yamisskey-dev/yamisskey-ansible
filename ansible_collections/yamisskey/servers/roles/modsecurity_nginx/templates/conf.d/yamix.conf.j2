# ModSecurity-Nginx configuration for Yamix (AI Life Counseling)
# This file is included in the main ModSecurity-Nginx container

# Upstream definition
upstream yamix_backend {
    server localhost:{{ host_services.caspar.yamix }};
    keepalive 8;
}

# Server block for Yamix
server {
    listen {{ modsecurity_nginx_port | default(8080) }};
    http2 on;
    server_name {{ yamix_server_name }};

    # Error page handling - redirect to maintenance page when backend is down
    error_page 502 503 504 @maintenance_redirect;

    # Maintenance page redirect location
    location @maintenance_redirect {
        return 302 https://down.yami.ski;
    }

    # Security headers (included from shared config to ensure inheritance in all locations)
    include /etc/nginx/conf.d/00-security-headers-sameorigin.conf;

    # Proxy settings
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;

    # API endpoints (AI counseling)
    location /api/ {
        proxy_pass http://yamix_backend;
        proxy_http_version 1.1;

        # Longer timeouts for AI responses
        proxy_connect_timeout 30s;
        proxy_send_timeout 120s;
        proxy_read_timeout 120s;

        # No caching for dynamic content
        include /etc/nginx/conf.d/00-security-headers-sameorigin.conf;
        add_header Cache-Control "no-cache, no-store, must-revalidate";
    }

    # Next.js static assets
    location /_next/static/ {
        proxy_pass http://yamix_backend;
        proxy_http_version 1.1;

        # Cache static assets
        proxy_cache static_cache;
        proxy_cache_valid 200 7d;
        proxy_cache_valid 404 1h;
        proxy_cache_use_stale error timeout updating;

        expires 7d;
        include /etc/nginx/conf.d/00-security-headers-sameorigin.conf;
        add_header Cache-Control "public, immutable";
        add_header X-Cache-Status $upstream_cache_status;
    }

    # Next.js image optimization
    location /_next/image {
        proxy_pass http://yamix_backend;
        proxy_http_version 1.1;

        proxy_cache static_cache;
        proxy_cache_valid 200 1d;
        proxy_cache_use_stale error timeout updating;

        include /etc/nginx/conf.d/00-security-headers-sameorigin.conf;
        add_header X-Cache-Status $upstream_cache_status;
    }

    # Main Yamix application
    location / {
        proxy_pass http://yamix_backend;
        proxy_http_version 1.1;

        # Standard timeouts
        proxy_connect_timeout 30s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;

        # Buffering
        proxy_buffering on;
        proxy_buffer_size 64k;
        proxy_buffers 4 64k;

        # Light caching for pages
        proxy_cache api_cache;
        proxy_cache_methods GET HEAD;
        proxy_cache_valid 200 5m;
        proxy_cache_valid 404 1m;
        proxy_cache_use_stale error timeout updating;
        proxy_cache_key "$scheme$request_method$host$request_uri";

        include /etc/nginx/conf.d/00-security-headers-sameorigin.conf;
        add_header X-Cache-Status $upstream_cache_status;
    }

    # Static assets
    location ~* \.(css|js|woff|woff2|ttf|eot|svg|ico|png|jpg|gif|webp)$ {
        proxy_pass http://yamix_backend;

        proxy_cache static_cache;
        proxy_cache_valid 200 1d;
        proxy_cache_valid 404 1h;
        proxy_cache_use_stale error timeout updating;

        expires 1d;
        include /etc/nginx/conf.d/00-security-headers-sameorigin.conf;
        add_header Cache-Control "public";
        add_header X-Cache-Status $upstream_cache_status;
    }
}
