# ModSecurity-Nginx configuration for CryptPad
# This file is included in the main ModSecurity-Nginx container

# Upstream definitions
upstream cryptpad_backend {
    server localhost:3333;
    keepalive 8;
}

upstream cryptpad_websocket_backend {
    server localhost:{{ host_services.balthasar.cryptpad }};
    keepalive 8;
}

# Server block for CryptPad
server {
    listen {{ modsecurity_nginx_port | default(8080) }};
    http2 on;
    server_name {{ cryptpad_server_name }};

    # Error page handling - redirect to maintenance page when backend is down
    error_page 502 503 504 @maintenance_redirect;

    # Maintenance page redirect location
    location @maintenance_redirect {
        return 302 https://down.yami.ski;
    }

    # Large file uploads for documents
    client_max_body_size 100M;

    # Security headers (included from shared config to ensure inheritance in all locations)
    include /etc/nginx/conf.d/00-security-headers-sameorigin.conf;

    # Proxy settings
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;

    # WebSocket support
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;

    # WebSocket endpoint for real-time collaboration
    location /cryptpad_websocket {
        proxy_pass http://cryptpad_websocket_backend;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Long timeouts for collaborative sessions
        proxy_read_timeout 1800s;
        proxy_send_timeout 1800s;
        proxy_connect_timeout 1800s;
    }

    # Service worker (required for offline functionality)
    location /serviceworker.js {
        proxy_pass http://cryptpad_backend;
        proxy_http_version 1.1;

        # No caching for service worker
        # Security headers (must be included in location blocks that use add_header)
        include /etc/nginx/conf.d/00-security-headers-sameorigin.conf;
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        expires 0;
    }

    # Main CryptPad application
    location / {
        proxy_pass http://cryptpad_backend;
        proxy_http_version 1.1;

        # Long timeouts for document operations
        proxy_connect_timeout 60s;
        proxy_send_timeout 1800s;
        proxy_read_timeout 1800s;

        # Buffering
        proxy_buffering on;
        proxy_buffer_size 128k;
        proxy_buffers 4 256k;

        # Very light caching for CryptPad interface
        proxy_cache api_cache;
        proxy_cache_methods GET HEAD;
        proxy_cache_valid 200 1m;
        proxy_cache_valid 404 30s;
        proxy_cache_use_stale error timeout updating;
        proxy_cache_key "$scheme$request_method$host$request_uri";

        # Security headers (must be included in location blocks that use add_header)
        include /etc/nginx/conf.d/00-security-headers-sameorigin.conf;
        add_header X-Cache-Status $upstream_cache_status;
    }

    # Static assets for CryptPad
    location ~* \.(css|js|woff|woff2|ttf|eot|svg|ico|png|jpg|gif)$ {
        proxy_pass http://cryptpad_backend;

        proxy_cache static_cache;
        proxy_cache_valid 200 1d;
        proxy_cache_valid 404 1h;
        proxy_cache_use_stale error timeout updating;

        expires 1d;
        # Security headers (must be included in location blocks that use add_header)
        include /etc/nginx/conf.d/00-security-headers-sameorigin.conf;
        add_header Cache-Control "public";
        add_header X-Cache-Status $upstream_cache_status;
    }
}
